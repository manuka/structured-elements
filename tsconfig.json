{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "noErrorTruncation": true,
    "outDir": "./dist",
    "paths": {
      "@": ["src/index"],
      "@/*": ["src/*"],
      "&": ["test/index"],
      "&/*": ["test/*"]
    },
    "sourceMap": true,
    "strict": true,
    "target": "ES2019"
  },
  "exclude": ["node_modules"],
  "include": ["src", "test"]
}
