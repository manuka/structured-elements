{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "noErrorTruncation": true,
    "outDir": "./dist",
    "paths": {
      "@": ["src/index"],
      "@/*": ["src/*"]
    },
    "strict": true,
    "target": "ES2019"
  },
  "exclude": ["node_modules", "test"],
  "include": ["src"]
}
